@model IEnumerable<Department>
@{
    Layout = "_Sidebar";
}
    <p>
        <a class="btn btn-primary" asp-action="Edit">Create New</a>
    </p>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adress)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="item" name="DepartmentId" asp-route-id="@item.DepartmentId" asp-action="Edit">
                                @Html.DisplayFor(modelItem => item.DepartmentId)
                            </a>
                            (<a class="form-label" name="id" asp-route-Id="@item.DepartmentId" asp-action="Delete">Delete</a>
                            )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    @if (ViewBag.MaxPage != 1)
    {
        <div class="row my-4">
            <div class="text-center">
                @for (int i = 1; i < ViewBag.MaxPage + 1; i++)
                {
                   <a class="btn btn-outline-primary" asp-action="List" asp-route-Page="@i">@i</a>   
                }
            </div>
        </div>
    }
