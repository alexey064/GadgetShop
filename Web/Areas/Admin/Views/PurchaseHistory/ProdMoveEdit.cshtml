@model Web.Models.ViewModel.ProdLViewModel
@{
    Layout = "_Sidebar";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Edit</title>
</head>
<body>
    <h4>Accessory</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="MoveSave">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input name="MoveId" value="@Model.EditItem.Id" type="hidden" />
                <input name="MovementTypeId" value="2" hidden/>
                <div class="form-group">
                    <label class="control-label">Product name</label>
                    <select name="ProductId" class="form-select">
                        @foreach (Product item in Model.product)
                        {
                                <option value="@item.ProductId">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">Count</label>
                    <input name="Count" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-danger" asp-action="List">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>