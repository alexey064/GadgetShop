@model IEnumerable<WirelessHeadphone>

@{
    Layout = "_Sidebar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>List</title>
</head>
<body>
    <p>
        <a class="btn btn-primary" asp-action="Edit">Create New</a>
    </p>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BluetoothVersion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Radius)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Battery)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CaseBattery)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChargingType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.DiscountDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="item" name="id" asp-route-id="@item.Id" asp-action="Edit">
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </a>
                        (<a class="form-label" name="id" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
                        )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Type.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BluetoothVersion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Radius)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Battery)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CaseBattery)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChargingType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Color.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Department)
                    </td>
                    <td>
                        @if (String.IsNullOrEmpty(item.Product.Photo))
                        {
                            <label>No</label>
                        }
                        else
                        { <label>Yes</label>}
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Product.DiscountDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (ViewBag.MaxPage != 1)
    {
        <div class="row my-4">
            <div class="text-center">
                @for (int i = 1; i < ViewBag.MaxPage + 1; i++)
                {
                    <a class="btn btn-outline-primary" asp-action="List" asp-route-Page="@i">@i</a>
                }
            </div>
        </div>
    }
</body>
</html>