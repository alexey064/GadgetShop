@model IEnumerable<Diplom.Models.Model.Notebook>
@{Layout = "_Sidebar";}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <title>List</title>
</head>
<body>
<p>
    <a class="btn btn-primary" asp-action="Edit">Create New</a>
</p>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.product.Name)</th>
                <th>@Html.DisplayNameFor(model => model.product.Description)</th>
                <th>@Html.DisplayNameFor(model => model.product.Brand)</th>
                <th>@Html.DisplayNameFor(model => model.OS)</th>
                <th>@Html.DisplayNameFor(model => model.RAMCount)</th>
                <th>@Html.DisplayNameFor(model => model.Processor)</th>
                <th>@Html.DisplayNameFor(model => model.Weight)</th>
                <th>@Html.DisplayNameFor(model => model.ScreenSize)</th>
                <th>@Html.DisplayNameFor(model => model.ScreenType)</th>
                <th>@Html.DisplayNameFor(model => model.BatteryCapacity)</th>
                <th>@Html.DisplayNameFor(model => model.product.Type.Name)</th>
                <th>@Html.DisplayNameFor(model => model.product.Color)</th>
                <th>@Html.DisplayNameFor(model => model.product.Department.DepartmentId)</th>
                <th>@Html.DisplayNameFor(model => model.product.Photo)</th>
                <th>@Html.DisplayNameFor(model => model.product.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Outputs)</th>
                <th>@Html.DisplayNameFor(model => model.product.Discount)</th>
                <th>@Html.DisplayNameFor(model => model.product.DiscountDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a class="item" name="id" asp-route-id="@item.Id" asp-action="Edit">
                            @Html.DisplayFor(modelItem => item.product.Name)
                        </a>
                        (<a class="form-label" name="id" value="@item.Id" asp-action="Delete">Delete</a>
                        )
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.product.Description)</td>
                    <td>@Html.DisplayFor(modelitem => item.product.Brand.Name)</td>
                    <td>@Html.DisplayFor(modelitem => item.OS.Name)</td>
                    <td>@Html.DisplayFor(modelitem => item.RAMCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Processor.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                    <td>@Html.DisplayFor(modelItem => item.ScreenSize)</td>
                    <td>@Html.DisplayFor(modelItem => item.ScreenType.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.BatteryCapacity)</td>
                    <td>@Html.DisplayFor(modelitem => item.product.Type.Name)</td>
                    <td>@Html.DisplayFor(modelitem => item.product.Color.Name)</td>
                    <td>@Html.DisplayFor(modelitem => item.product.Department.Adress)</td>
                    <td>
                    @if (String.IsNullOrEmpty(item.product.Photo))
                    {<label>No</label>}
                    else
                        { <label>Yes</label>}
                    </td>
<td>@Html.DisplayFor(modelitem => item.product.Price)</td>
<td>@Html.DisplayFor(modelitem => item.Outputs)</td>
<td>@Html.DisplayFor(modelitem => item.product.Discount)</td>
<td>@Html.DisplayFor(modelitem => item.product.DiscountDate)</td>
                </tr>
            } </tbody>
    </table>
    @if (ViewBag.MaxPage != 1)
    {
        <div class="row my-4">
            <div class="text-center">
                @for (int i = 1; i < ViewBag.MaxPage + 1; i++)
                {<a class="btn btn-outline-primary" asp-action="List" asp-route-Page="@i">@i</a>}
            </div>
        </div>
    }
</body></html>
